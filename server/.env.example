# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_PATH=./data/database.sqlite
DB_LOGGING=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@paymedrive.com

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# File Storage Configuration
BUCKET_PATH=./bucket
MAX_FILE_SIZE=104857600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
OTP_RATE_LIMIT_MAX=5
OTP_RATE_LIMIT_WINDOW_MS=900000

# Subscription Tier Limits (in bytes)
FREE_TIER_SIZE_LIMIT=10485760
FREE_TIER_ITEM_LIMIT=10
PRO_TIER_SIZE_LIMIT=104857600
PRO_TIER_ITEM_LIMIT=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS
CORS_ORIGIN=http://localhost:19006,http://localhost:8081
